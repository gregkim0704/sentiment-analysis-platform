# 환경변수 예시 파일
# 실제 사용시 .env 파일로 복사하여 값을 수정하세요

# 애플리케이션 설정
APP_NAME=멀티 스테이크홀더 센티멘트 분석 플랫폼
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# 데이터베이스 설정
DATABASE_URL=postgresql://sentiment_user:sentiment_pass@localhost:5432/sentiment_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sentiment_db
DB_USER=sentiment_user
DB_PASSWORD=sentiment_pass

# JWT 토큰 설정
JWT_SECRET_KEY=your-very-secure-secret-key-change-this-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis 설정
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API 서버 설정
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS 설정
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# 이메일 설정 (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SENDER_EMAIL=noreply@sentiment-analysis.com
SENDER_NAME=센티멘트 분석 플랫폼

# 외부 API 키
OPENAI_API_KEY=your-openai-api-key-here
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-google-custom-search-engine-id

# 소셜 미디어 API
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# 알림 설정
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# 모니터링 설정
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
SENTRY_DSN=your-sentry-dsn-url

# 크롤링 설정
CRAWLING_INTERVAL_HOURS=6
MAX_ARTICLES_PER_CRAWLING=1000
CRAWLING_DELAY_SECONDS=1
USER_AGENT=SentimentAnalysisPlatform/1.0
CRAWLING_TIMEOUT_SECONDS=30

# 센티멘트 분석 모델 설정
SENTIMENT_MODEL_NAME=klue/bert-base
SENTIMENT_MODEL_PATH=./models/sentiment
SENTIMENT_CONFIDENCE_THRESHOLD=0.7
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# 캐시 설정
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# 파일 업로드 설정
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=["txt", "csv", "xlsx", "json"]
UPLOAD_PATH=./uploads

# 보안 설정
SECRET_KEY=your-secret-key-for-sessions
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# 데이터 보관 정책
DATA_RETENTION_DAYS=365
CLEANUP_INTERVAL_HOURS=24
ARCHIVE_OLD_DATA=true

# 성능 설정
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
CONNECTION_POOL_SIZE=20
MAX_OVERFLOW=30

# 개발 도구 설정
ENABLE_SWAGGER=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=false

# 테스트 설정
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_sentiment_db
TEST_REDIS_URL=redis://localhost:6379/1

# 백업 설정
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 매일 새벽 2시
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# 알림 임계값 설정
ALERT_SENTIMENT_THRESHOLD=-1.5
ALERT_ARTICLE_COUNT_THRESHOLD=50
ALERT_ERROR_RATE_THRESHOLD=0.05

# 외부 서비스 설정
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_DELAY_SECONDS=5

# 국제화 설정
DEFAULT_LANGUAGE=ko
SUPPORTED_LANGUAGES=["ko", "en"]
TIMEZONE=Asia/Seoul

# 기능 플래그
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_API_RATE_LIMITING=true